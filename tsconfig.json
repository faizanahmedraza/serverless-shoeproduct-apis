{
    "compilerOptions": {
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "allowJs": true,
      "target": "ES2020",
      "strict": true,
      "outDir": ".build",
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "rootDir": "./",
      "module": "commonjs",
      "esModuleInterop": true
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }